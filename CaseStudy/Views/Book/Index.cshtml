@model IEnumerable<CaseStudy.Models.Book>

@{
    ViewData["Title"] = "Book";
}

<div style="font-family:Arial">
<h1>Book</h1>

<p>
    <a asp-action="Create">Create New Book</a>
</p>

<p>
    @using(Html.BeginForm("Index", "Book", FormMethod.Get))
     {
    <b>Search By:</b> @Html.RadioButton("searchBy", "Title", true) <text>Title</text><br/>
    @* @Html.RadioButton("searchBy", "Author", true) <text>Author</text> *@
    @Html.TextBox("search") <input type="submit" value="Search" />
     }
</p>
<table border="1" style="width:450px">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@if(Model.Count() == 0){
    <tr>
        <td colspan="3">No rows match your search criteria</td>
    </tr>
}
else 
{
 foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
}
    </tbody>
</table>
</div>
